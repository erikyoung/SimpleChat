<!DOCTYPE html>
<html>
  <head>
    <title>SimpleChat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <a class="navbar-brand" href="<%= root_path %>">SimpleChat</a>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    <% if current_user.present? %>
      <li class="nav-item active">
        <%= link_to "Sign Out", log_out_path, method: :delete, class: 'nav-link', :style=>'color:#FFFFFF;' %>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Sign Up", new_user_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
       <%= link_to "Sign In", new_session_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
          <%= link_to "Sent messages", messages_sent_path, class: 'nav-link' %>
        </li>
    </ul>
    <% end %>
    
    <form class="form-inline my-2 my-lg-0">
      <%= form_tag(messages_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Messages" %>
        <%= submit_tag "Search", :name => nil, :style => "color:blue;"  %>
    <% end %>
    </form>
  </div>
</nav> 

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>


