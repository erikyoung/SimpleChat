<h1 class="hello text-center">Messages</h1>

<table class="table table-stripped">
<thead class="thead thead-default">
	<tr>
		<th>Sender</th>
		<th>Subject</th>
	</tr>
</thead>
<tbody>
	<% @messages.each do |message| %>
		<tr>
			<td><%= message.sender.name || "No body No body but you" %></td>
			<td><%= message.subject %></td>
		</tr>
		<% end %>
</tbody>
</table>