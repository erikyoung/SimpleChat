<h1>New message to <%= params[:recipient] %></h1>

<div class="booyah-box col-xs-10 col-xs-offset-1">

<%= form_for @message do |f| %>
  Subject: <%= f.text_field :subject, class: 'form-control' %>
  Body: <%= f.text_area :body, class: 'form-control' %>
  <%= f.hidden_field :recipient_id, :value => params[:id] %>
  <%= f.submit "Send" %>
<% end %>

</div>