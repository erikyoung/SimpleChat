
<div class="booyah-box col-xs-10 col-xs-offset-1">
<h1 class="hello text-center">Friends Info</h1>

<%= form_for (@user) do |f| %>

	<div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_area :email, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :image_url %>
    <%= f.text_field :image_url, class: 'form-control' %>
  </div>
<br />
  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>


</div>