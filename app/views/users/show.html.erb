
<div class="booyah-box col-xs-10 col-xs-offset-1">
<h1 class="hello text-center">Friends Info</h1>

	<h1><%= @user.name %></h1>
  	<i><%= @user.email %></i>
  	<p><%= image_tag @user.image_url, :size => "320x240"  unless @user.image_url.blank? %></p>

	<% if current_user.present? %>
		<%= link_to 'Edit Info', edit_user_path(@user), class: 'btn btn-danger' %>
	<% end %>



</div>
